<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:gravity="center"
        tools:context=".MainActivity">

    <RelativeLayout android:layout_width="110dp" android:layout_height="wrap_content" android:layout_gravity="center" android:orientation="vertical">
        <ImageView
                android:id="@+id/iv_icon_first"
                android:paddingTop="20dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"/>
        <TextView
                android:id="@+id/info_text_first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"/>
    </RelativeLayout>
    <EditText
            android:id="@+id/et_search_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="@string/id"
            android:inputType="text"
            android:padding="10dp"
            android:textSize="25sp"/>
            <!--android:text="81890051"-->
    <LinearLayout
            android:id="@+id/gone_element"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <ImageView
                    android:id="@+id/iv_icon_friend"
                    android:paddingTop="20dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"/>
            <TextView
                    android:id="@+id/tv_some_friend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"/>
        </RelativeLayout>
            <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="+23 common friends"
                    android:layout_marginTop="50dp"
            />
        </LinearLayout>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <ImageView
                        android:id="@+id/iv_icon_group"
                        android:paddingTop="20dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"/>
                <TextView
                        android:id="@+id/tv_some_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"/>
            </RelativeLayout>
            <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="+47 common groups"
                    android:layout_marginTop="40dp"
            />
        </LinearLayout>
    </LinearLayout>
    <EditText
            android:id="@+id/et_search_field2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="@string/id"
            android:inputType="text"
            android:padding="10dp"
            android:textSize="25sp"/>
            <!--android:text="88372088"-->
    <RelativeLayout android:layout_width="110dp" android:layout_height="wrap_content" android:layout_gravity="center" android:orientation="vertical">
        <ImageView
                android:id="@+id/iv_icon_second"
                android:paddingTop="20dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"/>
        <TextView
                android:id="@+id/info_text_second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"/>
    </RelativeLayout>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:layout_gravity="center">
        <Button
                android:visibility="gone"
                android:id="@+id/b_GetUsers"
                android:text="GetUsers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <Button
                android:id="@+id/b_GetFriends"
                android:layout_marginRight="20dp"
                android:text="GetFriends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <Button
                android:id="@+id/b_GetGroups"
                android:layout_marginLeft="20dp"
                android:text="GetGroups"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>